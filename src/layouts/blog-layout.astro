---
import Footer from '../components/Footer.astro';
import Navigation from '../components/Navigation.astro';
import '../styles/site.css';
const { title, description } = Astro.props.frontmatter;
---
<html>
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <style is:global>
            main {
                width: 60%;
            }

            .blog-desc {
                margin-bottom: 2vh;
            }

            .blog-post {
                li {
                    position: relative;
                    left: 20px;
                    line-height:32px;
                    text-align: left;
                }

                ul {
                    margin-top: 20px;
                    margin-bottom: 20px;
                }

                p {
                    text-align: initial;
                    margin-bottom: 2rem;
                    line-height: 2rem;
                }

                a::after {
                    max-height: 1px;
                }

                h2 {
                    margin-top: 24px;
                    margin-bottom: 24px;
                }

                code:not(pre code) {
                    color: var(--ternary);
                    background-color: black;
                    padding: 6px;
                    border-radius: 20px;
                }

                pre {
                    padding-top: 10px;
                    padding-bottom: 10px;
                    border-radius: 20px;
                    text-align: left;
                    padding-left: 24px;
                    margin-bottom: 2em;
                    margin-top: 2em;
                }

                img {
                    margin-top: 2em;
                    margin-bottom: 2em;
                }
            }
        </style>
    </head>
    <body>
        <header>
            <Navigation />
        </header>
        <main>
            <h1 class="blog-title">{title}</h1>
            <p class="italic blog-desc">{description}</p>
            <hr>
            <br />
            <div class="blog-post">
                <slot /> 
            </div>
        </main>
        <Footer />
    </body>
</html>