---
import { Image } from 'astro:assets';
import headImage from '../images/HeadPhoto.jpg';
import Navigation from '../components/Navigation.astro';
import '../styles/site.css';
import Footer from '../components/Footer.astro';
import IconLinks from '../components/IconLinks.astro';

const title = "Tarcan Gul";
---

<html>
<head>
	<meta charset="utf-8" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="viewport" content="width=device-width" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
</head>
<body>
    <header>
        <Navigation />
    </header>
    <main>
        <section class="landing-section">
            <div class="left">
                <Image src={headImage} alt="Tarcan performing as a DJ" style="height: 100%; width: 100%; object-fit: cover"/>
            </div>
            <div class="right">
                <h1>Hello, I am Tarcan!</h1>
                <p class="italic">It is all about loving to create.</p>
                <hr style="width: 70%; align-self: center;">
                <p>
                    Knowledge is meant to be shared. As a software developer and music producer, I welcome you to my corner of knowledge sharing.
                </p>
            </div>
        </section>
        <div class="only-small">
            <ul class="icon-links">
                <IconLinks />
            </ul>
        </div>
    </main>
    <Footer />
    <style>
.landing-section {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 5vw;
    width: 100%;
    padding-bottom: 2vh;
}
.landing-section > * {
    flex: 1 0 auto;
}

.landing-section > .left {
    width: 45vw;
}

.landing-section > .right {
    display: flex;
    flex-direction: column;
    gap: 20px;
    text-align: center;
    width: 50%;
}

@media only screen and (max-width: 700px) {
    .landing-section {
        flex-direction: column;
    }
}
    </style>
</body>
</html>
